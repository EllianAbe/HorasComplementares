<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CoordinatorDashboardActivity">


    <LinearLayout
        android:id="@+id/layoutCoordinatorId"
        android:layout_width="350dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3DDC84"
            android:onClick="onClickAceitar"
            android:text="@string/aprovar" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF0000"
            android:onClick="onClickRejeitar"
            android:text="@string/rejeitar" />
    </LinearLayout>

    <ListView
        android:id="@+id/atividadesPendentes"
        android:layout_width="221dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutCoordinatorId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>